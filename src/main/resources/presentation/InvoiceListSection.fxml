<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" VBox.vgrow="ALWAYS"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="presentation.InvoiceListController">
      
    <Label text="DANH SÁCH HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    
    <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="sttColumn" text="STT" prefWidth="50" />
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="dateColumn" text="Ngày tạo" prefWidth="120" />
            <TableColumn fx:id="customerColumn" text="Khách hàng" prefWidth="150" />
            <TableColumn fx:id="roomColumn" text="Phòng" prefWidth="80" />
            <TableColumn fx:id="typeColumn" text="Loại" prefWidth="80" />
            <TableColumn fx:id="totalColumn" text="Tổng tiền" prefWidth="120" />
        </columns>
    </TableView>
    
    <!-- Statistics and Actions -->
    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
        <Label fx:id="totalInvoicesLabel" text="Tổng số hóa đơn: 0" style="-fx-font-weight: bold;" />
        <Separator orientation="VERTICAL" />
        <Label fx:id="totalAmountLabel" text="Tổng doanh thu: 0 VND" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" />
        <Separator orientation="VERTICAL" />
        <Button fx:id="refreshButton" text="Tải lại danh sách" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#refreshTable" />
        <Button fx:id="monthlyStatsButton" text="Thống kê" style="-fx-background-color: #8e44ad; -fx-text-fill: white;" onAction="#showMonthlyStats" />
    </HBox>
    
</VBox>