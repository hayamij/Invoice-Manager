<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.View.MainView">

    <!-- Header -->
    <top>
        <fx:include source="header.fxml" />
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            
            <!-- Search bar component -->
            <fx:include source="searchbar.fxml" />
            
            <!-- Form and actions -->
            <VBox spacing="10">
                <fx:include source="invoiceform.fxml" fx:id="invoiceform" />
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <fx:include source="deletebutton.fxml" fx:id="deletebutton" />
                    <fx:include source="updatebutton.fxml" fx:id="updateInvoiceView"/>
                    <fx:include source="refreshbutton.fxml" fx:id="refreshbutton" />
                </HBox>
            </VBox>
            
            <!-- Invoice table component -->
            <fx:include source="invoicetable.fxml" fx:id="invoiceTableView" />
            
            <!-- Statistics component -->
            <fx:include source="invoicestatistic.fxml" />
            
        </VBox>
    </center>

</BorderPane>