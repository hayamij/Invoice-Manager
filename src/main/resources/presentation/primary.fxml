<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.PrimaryController">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Invoice Manager System" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
        </HBox>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            
            <!-- Search bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="Tìm kiếm:" style="-fx-font-weight: bold;" />
                <TextField fx:id="searchField" promptText="Nhập tên khách hàng hoặc mã phòng..." prefWidth="300" />
                <Button fx:id="searchButton" text="Tìm kiếm" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#searchInvoices" />
                <Button fx:id="clearSearchButton" text="Xóa bộ lọc" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" onAction="#clearSearch" />
            </HBox>
            
            <!-- Form nhập liệu -->
            <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 5;">
                <Label text="THÔNG TIN HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="200" />
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="200" />
                    </columnConstraints>
                    
                    <!-- Row 1 -->
                    <Label text="Tên khách hàng:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="customerField" promptText="Nhập tên khách hàng" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <Label text="Số phòng:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="roomField" promptText="VD: 101, 102..." GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    
                    <!-- Row 2 -->
                    <Label text="Đơn giá:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="unitPriceField" promptText="VND/giờ hoặc VND/ngày" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="Loại hóa đơn:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity" promptText="Chọn loại hóa đơn" />
                    
                    <!-- Row 3 -->
                    <Label fx:id="hourLabel" text="Số giờ:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="hourField" promptText="Nhập số giờ" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    
                    <Label fx:id="dayLabel" text="Số ngày:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="dayField" promptText="Nhập số ngày" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                </GridPane>
                
                <!-- Các nút chức năng -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="addButton" text="Thêm hóa đơn" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#addInvoice" />
                    <Button fx:id="updateButton" text="Cập nhật" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#updateInvoice" />
                    <Button fx:id="deleteButton" text="Xóa" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#deleteInvoice" />
                    <Button fx:id="clearButton" text="Làm mới" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#clearForm" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="refreshButton" text="Tải lại danh sách" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#refreshTable" />
                </HBox>
            </VBox>
            
            <!-- Bảng danh sách hóa đơn -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="DANH SÁCH HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                        <TableColumn fx:id="dateColumn" text="Ngày tạo" prefWidth="120" />
                        <TableColumn fx:id="customerColumn" text="Khách hàng" prefWidth="150" />
                        <TableColumn fx:id="roomColumn" text="Phòng" prefWidth="80" />
                        <TableColumn fx:id="typeColumn" text="Loại" prefWidth="80" />
                        <TableColumn fx:id="unitPriceColumn" text="Đơn giá" prefWidth="100" />
                        <TableColumn fx:id="hourColumn" text="Giờ" prefWidth="60" />
                        <TableColumn fx:id="dayColumn" text="Ngày" prefWidth="60" />
                        <TableColumn fx:id="totalColumn" text="Tổng tiền" prefWidth="120" />
                    </columns>
                </TableView>
                
                <!-- Thống kê -->
                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                    <Label fx:id="totalInvoicesLabel" text="Tổng số hóa đơn: 0" style="-fx-font-weight: bold;" />
                    <Separator orientation="VERTICAL" />
                    <Label fx:id="totalAmountLabel" text="Tổng doanh thu: 0 VND" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                    <Separator orientation="VERTICAL" />
                    <Button fx:id="monthlyStatsButton" text="Thống kê theo tháng" style="-fx-background-color: #8e44ad; -fx-text-fill: white;" onAction="#showMonthlyStats" />
                </HBox>
            </VBox>
            
        </VBox>
    </center>

</BorderPane>
