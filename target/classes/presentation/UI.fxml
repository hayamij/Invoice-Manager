<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.MainUI">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Invoice Manager System" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search (con: SearchBar.fxml) -->
            <fx:include source="SearchBar.fxml" fx:id="searchBar"/>

            <!-- Form nhập liệu (giữ ở file cha để chia sẻ dữ liệu) -->
            <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 5;">
                <Label text="THÔNG TIN HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="200" />
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="200" />
                    </columnConstraints>

                    <!-- Row 1 -->
                    <Label text="Tên khách hàng:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="customerField" promptText="Nhập tên khách hàng" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Số phòng:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="roomField" promptText="VD: 101, 102..." GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <!-- Row 2 -->
                    <Label text="Đơn giá:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="unitPriceField" promptText="VND/giờ hoặc VND/ngày" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Loại hóa đơn:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="3" GridPane.rowIndex="1" promptText="Chọn loại hóa đơn" />

                    <!-- Row 3 -->
                    <Label fx:id="hourLabel" text="Số giờ:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="hourField" promptText="Nhập số giờ" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label fx:id="dayLabel" text="Số ngày:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="dayField" promptText="Nhập số ngày" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                </GridPane>

                <!-- Hàng nút chức năng (3 FXML con cho add/update/delete) + 1 nút refresh tại cha -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <fx:include source="AddButton.fxml"     fx:id="addBtn"/>
                    <fx:include source="UpdateButton.fxml"  fx:id="updateBtn"/>
                    <fx:include source="DeleteButton.fxml"  fx:id="deleteBtn"/>
                    <Button fx:id="refreshButton" text="Tải lại danh sách"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                            onAction="#refreshTable"/>
                </HBox>
            </VBox>

            <!-- Bảng + Statistics -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="DANH SÁCH HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="sttColumn" text="STT" prefWidth="50" />
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                        <TableColumn fx:id="dateColumn" text="Ngày tạo" prefWidth="120" />
                        <TableColumn fx:id="customerColumn" text="Khách hàng" prefWidth="150" />
                        <TableColumn fx:id="roomColumn" text="Phòng" prefWidth="80" />
                        <TableColumn fx:id="typeColumn" text="Loại" prefWidth="80" />
                        <TableColumn fx:id="totalColumn" text="Tổng tiền" prefWidth="120" />
                    </columns>
                </TableView>

                <!-- Statistics (con: StatisticsBar.fxml) -->
                <fx:include source="StatisticsBar.fxml" fx:id="statsBar"/>
            </VBox>

        </VBox>
    </center>
</BorderPane>
