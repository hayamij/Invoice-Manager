<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.View.InvoiceStatistics.InvoiceStatisticFormView" style="-fx-background-color: #f4f6fa; -fx-padding: 30;">
    <VBox spacing="25" alignment="CENTER">
        <Label text="BÁO CÁO THỐNG KÊ HÓA ĐƠN" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2a3a5e;" />
        <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #b0b8c1, 8, 0, 0, 2);">
                <Label text="Thống kê loại thuê phòng" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3a4a6e;" />
                <Label fx:id="hourlyLabel" text="Số lượng thuê theo giờ: 0" style="-fx-font-size: 16px; -fx-text-fill: #2a3a5e;" />
                <Label fx:id="dailyLabel" text="Số lượng thuê theo ngày: 0" style="-fx-font-size: 16px; -fx-text-fill: #2a3a5e;" />
            </VBox>
            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color:transparent;">
                <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #b0b8c1, 8, 0, 0, 2);">
                    <Label text="Trung bình thành tiền hóa đơn theo tháng/năm" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3a4a6e;" />
                    <TableView fx:id="averageTable" prefHeight="320" prefWidth="420" style="-fx-background-radius: 8;">
                        <columns>
                            <TableColumn fx:id="monthColumn" text="Tháng" prefWidth="100" />
                            <TableColumn fx:id="yearColumn" text="Năm" prefWidth="100" />
                            <TableColumn fx:id="averageColumn" text="Trung bình" prefWidth="200" />
                        </columns>
                    </TableView>
                </VBox>
            </ScrollPane>
        </HBox>
    </VBox>
</StackPane>